{
    "name": "FreRect pykeops tests",
    "n_gpu": 1,

    "arch": {
        "type": "PUNet",
        "args": {
            "use_bn": true,
            "npoint": 2048,
            "up_ratio": 2 
        }
    },
    "data_loader": {
        "type": "ShapeNetAugmentedDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.5,
            "num_workers": 0,
            "pin_memory": false,
            "tr_sample_size": 4096,
            "down_ratio": 2,
            "random_downsample": false,
            "noise": false,
            "calc_harmonics": true,
            "size":2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0.0005,
            "amsgrad": true
        }
    },
    "loss": ["pu_emd_loss", "repulsion_loss", "fre_loss"],
    "loss_weight": [100.0, 1.0, 1.0],
    "metrics": [
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "pass_optimizer": false,
        "args": {
            "step_size": 500,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 500,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,
        "do_validation": false,
        "val_per_epochs" : 5,
        "visualize_per_epochs" : 500,    
        "visualize_train_batch" : 500,

        "tensorboard": false 
    }
}
