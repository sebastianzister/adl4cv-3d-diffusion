{
    "name": "PVCU Full",
    "n_gpu": 1,

    "arch": {
        "type": "PVCU",
        "args": {
            "use_bn": true,
            "npoint": 2048,
            "up_ratio": 2
        }
    },
    "data_loader": {
        "type": "ShapeNetAugmentedDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 1,
            "shuffle": false,
            "validation_split": 0.5,
            "num_workers": 2,
            "pin_memory": false,
            "size": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.01,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": ["pu_emd_loss", "repulsion_loss"],
    "loss_weight": [100.0, 1.0],
    "metrics": [
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "pass_optimizer": true,
        "args": {
            "gamma": 0.99654026282787,
            "step_size": 500
        }
    },
    "trainer": {
        "epochs": 1000,

        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,
        "do_validation": false,
        "val_per_epochs" : 5,
        "visualize_per_epochs" : 5000,    
        "visualize_train_batch" : 5000,

        "tensorboard": true
    }
}
