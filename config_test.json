{
    "name": "PointDetail",
    "n_gpu": 1,

    "arch": {
        "type": "PUNet",
        "args": {
            "use_bn": true,
            "npoint": 2048,
            "up_ratio": 2
        }
    },
    "data_loader": {
        "type": "ShapeNetAugmentedDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 0,
            "size": 100
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.01,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "emd_re_loss",
    "metrics": [
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 1000,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 1000,

        "save_dir": "saved/",
        "save_period": 2000,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 0,
        "do_validation": false,
        "val_per_epochs" : 5,
        "visualize_per_epochs" : 50,    
        "visualize_train_batch" : 50,

        "tensorboard": true
    }
}
