{
    "name": "PointDetail",
    "n_gpu": 1,

    "arch": {
        "type": "PUNet",
        "args": {
            "up_ratio": 1,
            "npoint": 2048,
            "use_bn": true
        }
    },
    "data_loader": {
        "type": "PointDetailDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.5,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": false 
        }
    },
    "loss": "emd_re_loss",
    "metrics": [
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 500,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 1000,

        "save_dir": "saved/",
        "save_period": 1000,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 0,
        "do_validation": false,
        "val_per_epochs" : 100,
        "visualize_per_epochs" : 5000,    

        "tensorboard": true
    }
}
