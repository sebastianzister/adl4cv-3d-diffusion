{
    "name": "PointDetail",
    "n_gpu": 1,

    "arch": {
        "type": "SparseDetailModel",
        "args": {}
    },
    "data_loader": {
        "type": "PointDetailDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.5,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cd_loss",
    "metrics": [
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 0,
        "do_validation": false,
        "val_per_epochs" : 10,
        "visualize_per_epochs" : 50,    

        "tensorboard": true
    }
}
